<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CulravEventLayout"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/event_darkroom_header"    
        style="@style/Culrav.Event.Header"
        android:background="@color/holo_red_light" />        
    
    <ScrollView
        android:layout_width="@dimen/layout_land_max_width"
    	android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay" >
        
        <LinearLayout
            style="@style/CulravEventScroller" >
            
            <TextView
        		android:id="@+id/event_darkroom_description"
        		style="@style/Culrav.Event.Text" />
            
            <TextView
                android:id="@+id/event_darkroom_header_format"
                style="@style/Culrav.Event.Section"
                android:text="@string/event_format"                
                android:textColor="@color/holo_red_light" />
            
            <TextView
                android:id="@+id/event_darkroom_header_format_underline"
                style="@style/Culrav.Event.Section.Divider"
                android:background="@color/holo_red_light" />
            
            <TextView
                android:id="@+id/event_darkroom_format_description"
                style="@style/Culrav.Event.Text" />
            
            <TextView
                android:id="@+id/event_darkroom_rules_judging"
                style="@style/Culrav.Event.Section"                
                android:text="@string/event_rules"                
                android:textColor="@color/holo_red_light" />
            
            <TextView
                android:id="@+id/event_darkroom_header_rules_underline"
                style="@style/Culrav.Event.Section.Divider"
                android:background="@color/holo_red_light" />
            
            <TextView
                android:id="@+id/event_darkroom_rules_description"
                style="@style/Culrav.Event.Text" />
		</LinearLayout>
	</ScrollView>            
	
    <Button
        android:id="@+id/event_darkroom_button_fb"
        style="@style/fb_button"
        android:textColor="@color/holo_red_dark" />
</LinearLayout>