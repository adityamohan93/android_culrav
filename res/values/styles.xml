<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="CulravBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->               
    </style>
        

    <!-- Application theme. -->
    <style name="CulravTheme" parent="CulravBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/CulravActionBar</item>               
        <item name="actionBarTabStyle">@style/CulravActionBar.TabView</item>           
        <item name="actionBarTabTextStyle">@style/CulravActionBar.TabText</item>
        <item name="actionMenuTextColor">@color/holo_red_light</item>        
    </style>           
    
    <style name="CulravTheme.Map" parent="CulravTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    
    <!-- Action Bar -->
    <style name="CulravActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background_noshadow</item>
        <item name="background">@drawable/actionbar_background_noshadow</item>        
        <item name="titleTextStyle">@style/CulravActionBar.TitleText</item>
    </style>
    
    <style name="CulravActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/holo_red_dark</item>        
    </style>
               
    <style name="CulravActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/holo_red_light</item>
    </style>
    
    <style name="CulravActionBar.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="background">@drawable/red_tab_indicator_holo</item>        
        <item name="android:background">@drawable/red_tab_indicator_holo</item>
	</style>                  
                        
    <!-- Events -->
    <style name="CulravEventLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/holo_snow</item>
    </style>       
    
    <style name="Culrav.Event.Text" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="Culrav.Event.Header" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>       
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">1dp</item>        
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>        
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Culrav.Event.Section" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">2dp</item>		
		<item name="android:textSize">16sp</item>				
    </style>
    
    <style name="Culrav.Event.Section.Divider" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:paddingBottom">6dp</item>
    </style>
    
    <style name="CulravEventScroller">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:orientation">vertical</item>
    </style>
    
    <style name="ListItemTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>        
    </style>
    
    <style name="ListItemSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>               
    </style>
    
    <!-- Nites -->
    <style name="NitesImage">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- ListView -->
    <style name="navigation_drawer">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>        
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">1dp</item>             
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/background_light</item>                             
    </style>
    
    <style name="items_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>        
        <item name="android:layout_margin">8dp</item>               
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/holo_gray_cool</item>
        <item name="android:dividerHeight">1dp</item>             
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:background">@android:color/background_light</item>                             
    </style>
    
    <style name="item_person_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>       
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>      
        <item name="android:textColor">@color/holo_red_dark</item>
        <item name="android:shadowColor">@color/holo_red_light</item>
    </style>
    
    <style name="fb_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@color/holo_gray_light</item>
        <item name="android:text">@string/event_fb</item>
        <item name="android:textSize">20sp</item>        
    </style>
</resources>
